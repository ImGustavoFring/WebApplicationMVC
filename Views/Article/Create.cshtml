@using WebApplicationMVC.Models
@model WebApplicationMVC.Models.Article

@{
    ViewData["Title"] = "Create Article";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2>Create Article</h2>
    <form asp-action="Create" method="post">
        <div class="form-container">
            <!-- Title Field -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter article title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Content Field -->
            <div class="mb-3">
                <label asp-for="Content" class="form-label">Content</label>
                <textarea asp-for="Content" class="form-control" rows="6" placeholder="Write your article content here"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Visibility Field -->
            <div class="mb-3">
                <label class="form-label">Visibility</label>
                <select asp-for="Visibilityid" class="form-select" asp-items="@(new SelectList(ViewBag.VisibilityOptions ?? new List<Visibility>(), "Id", "Name"))">
                    <option value="">Select visibility</option>
                </select>
            </div>

            <!-- Tags Field -->
            <div class="mb-3">
                <label class="form-label">Tags</label>
                <input type="text" name="tagNames" class="form-control" placeholder="Enter tags separated by commas" />
                <span class="form-text">Add tags to help categorize your article</span>
            </div>

            <!-- Submit Button -->
            <div class="btn-container">
                <button type="submit" class="btn btn-primary">Create Article</button>
            </div>
        </div>
    </form>
</div>

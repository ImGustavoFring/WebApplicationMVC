@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Главная страница";
}

<div class="container mt-5">
    <h2 class="mb-4">Последние статьи</h2>

    <!-- Список тегов -->
    <div class="mb-4">
        <h4>Теги</h4>
        <div class="d-flex flex-wrap">
            @foreach (var tag in ViewBag.Tags as List<WebApplicationMVC.Models.Tag>)
            {
                <span class="badge bg-primary me-2 mb-2">@tag.Name</span>
            }
        </div>
    </div>

    <!-- Список статей (вертикальное отображение) -->
    <div class="list-group">
        @foreach (var article in Model)
        {
            <div class="list-group-item mb-3">
                <div class="d-flex flex-column">
                    <!-- Превью изображения статьи -->
                    @if (!string.IsNullOrEmpty(article.Previewurl))
                    {
                        <img src="@article.Previewurl" class="img-fluid mb-3" alt="Preview image">
                    }
                    <h5 class="mb-2">@article.Title</h5>
                    <p>
                        @Html.Raw(article.Content.Length > 100 ? article.Content.Substring(0, 100) + "..." : article.Content)
                    </p>
                    <a href="@Url.Action("Details", "Article", new { id = article.Id })" class="btn btn-secondary btn-sm">Читать дальше</a>
                </div>
                <div class="card-footer text-muted mt-2">
                    Автор: @article.User.Fullname
                </div>
            </div>
        }
    </div>
</div>

@model WebApplicationMVC.Models.User

@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Детали пользователя";
}

<div class="container mt-5" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="card">
        <div class="card-header">
            <h2>Информация о пользователе</h2>
        </div>
        <div class="card-body">
            <p><strong>Логин:</strong> @Model.Username</p>
            <p><strong>Электронная почта:</strong> @Model.Email</p>
            <p><strong>Полное имя:</strong> @Model.Fullname</p>
            <p><strong>О себе:</strong> @(Model.Bio ?? "Информация отсутствует")</p>
            <p><strong>Контактная информация:</strong> @(Model.Contactinfo ?? "Контактная информация отсутствует")</p>
            <p><strong>Роль:</strong> @(Model.Role?.Name ?? "Роль не назначена")</p>
            <p><strong>Дата создания аккаунта:</strong> @Model.Createdat.ToString("yyyy-MM-dd HH:mm")</p>
            @if (Model.Updatedat.HasValue)
            {
                <p><strong>Последнее обновление:</strong> @Model.Updatedat.Value.ToString("yyyy-MM-dd HH:mm")</p>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-start">
                <!-- Ссылка на статьи пользователя -->
                <a class="btn btn-link" href="@Url.Action("Articles", "User", new { id = Model.Id })">Просмотреть статьи</a>

                <!-- Ссылка на редактирование профиля -->
                <a class="btn btn-link" href="@Url.Action("Edit", "User", new { id = Model.Id })">Редактировать профиль</a>

                <!-- Ссылка на подписки пользователя -->
                <a class="btn btn-link" href="@Url.Action("Subscriptions", "User", new { id = Model.Id })">Посмотреть подписки</a>

                <!-- Ссылка на подписчиков пользователя -->
                <a class="btn btn-link" href="@Url.Action("Subscribers", "User", new { id = Model.Id })">Посмотреть подписчиков</a>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<WebApplicationMVC.Models.Article>

@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Статьи пользователя";
}

<div class="container mt-5">
    <h2>Статьи пользователя</h2>
    @if (!Model.Any())
    {
            <p>У пользователя нет статей.</p>
    }
    else
    {
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var article in Model)
                {
                            <tr>
                                <td>@article.Title</td>
                                <td>@article.Createdat.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a href="@Url.Action("Details", "Article", new { id = article.Id })" class="btn btn-link">Просмотр</a>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
</div>

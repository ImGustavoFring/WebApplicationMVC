<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Computer World</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #2c3e50;
            color: #ffffff;
            height: 10vh;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-left {
            display: flex;
            align-items: center;
        }

        .header-left h1 {
            margin-right: 20px;
        }

        .header-left h1 a {
            color: #ffffff;
            text-decoration: none;
        }

        .header-left h1 a:hover {
            color: #bdc3c7;
        }

        .header-right {
            display: flex;
            align-items: center;
        }

        .header-right-link {
            color: #ffffff;
            text-decoration: none;
            margin-right: 15px;
        }

        .header-right-link:hover {
            color: #bdc3c7;
        }

        main {
            flex: 1;
            overflow-y: auto;
            background-color: #ffffff;
            color: #34495e;
            padding: 20px;
        }

        .form-container {
            background-color: #f8f9fa;
            box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1);
            border-radius: 6px;
            padding: 15px;
            width: 100%;
            max-width: 400px;
            margin: 20px auto;
            text-align: center;
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-container {
            text-align: center;
        }

        .form-footer {
            margin-top: 15px;
            text-align: center;
        }

        .form-footer a {
            text-decoration: none;
            color: #007bff;
        }

        .btn-container a:hover {
            text-decoration: underline;
        }

        .mb-3 label {
            display: block;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <header class="py-3">
            <div class="header-left">
                <h1><a href="@Url.Action("Index", "Home")">Computer World</a></h1>
            </div>
            <div class="header-right">
                <a class="header-right-link" href="@Url.Action("About", "Home")">О сайте</a>
            </div>
        </header>

        <main class="container">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

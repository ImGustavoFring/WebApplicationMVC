<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Computer World</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #2c3e50;
            color: #ffffff;
            height: 10vh;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-left {
            display: flex;
            align-items: center;
        }

            .header-left h1 {
                margin-right: 20px;
            }

                .header-left h1 a {
                    color: #ffffff;
                    text-decoration: none;
                }

                    .header-left h1 a:hover {
                        color: #bdc3c7;
                    }

        .header-right {
            display: flex;
            align-items: center;
        }

        .header-right-link {
            color: #ffffff;
            text-decoration: none;
            margin-right: 15px;
        }

            .header-right-link:hover {
                color: #bdc3c7;
            }

        .search-input {
            height: 35px;
            width: 200px;
            margin-right: 10px;
        }

        .btn-search {
            height: 35px;
        }

        main {
            flex: 1;
            overflow-y: auto;
            background-color: #ffffff;
            color: #34495e;
            padding: 20px;
        }

        .user-avatar {
            width: 80px;
            height: 120px;
            object-fit: cover;
            background-color: #bdc3c7;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header class="py-3">
            <div class="header-left">
                <h1><a href="@Url.Action("Index", "Home")">Computer World</a></h1>
            </div>
            <div class="header-right">
                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                {
                    <a class="header-right-link" href="@Url.Action("GetVisits", "Visit")">Посмотреть посещаемость</a>
                }
                <a class="header-right-link" href="@Url.Action("Create", "Article")">Написать статью</a>
                <a class="header-right-link" href="@Url.Action("Details", "User")">Профиль</a>
            </div>
        </header>

        <main class="container">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Computer World</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        header {
            background-color: #2c3e50;
            color: #ffffff;
            height: 10vh;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .header-left {
            display: flex;
            align-items: center;
        }

            .header-left h1 {
                margin-right: 20px;
            }

        .header-right {
            display: flex;
            align-items: center;
        }

        .search-input {
            height: 35px;
            width: 200px;
            margin-right: 10px;
        }

        .btn-search {
            height: 35px;
        }

        main {
            background-color: #ffffff;
            color: #34495e;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90vh;
        }

        a {
            color: #ffffff;
            text-decoration: none;
            margin-left: 20px;
        }

            a:hover {
                color: #bdc3c7;
            }

        .form-container {
            background-color: #f8f9fa;
            box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1);
            border-radius: 6px;
            padding: 15px;
            width: 100%;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-bottom: 50px;
        }

        .form-control {
            height: 45px;
            min-width: 300px;
        }

        .form-label {
            font-size: 0.9rem;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .form-footer {
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header class="py-3">
            <div class="header-left">
                <h1><a href="@Url.Action("Index", "Home")">Computer World</a></h1>
                <!-- Поле поиска -->
                <input type="text" class="form-control search-input" placeholder="Поиск...">
                <button class="btn btn-secondary btn-search">Найти</button>
            </div>
            <div class="header-right">
                <!-- Ссылки -->
                <a href="@Url.Action("Create", "Article")">Написать статью</a>
                <a href="@Url.Action("Details", "User")">Профиль</a>
            </div>
        </header>

        <main class="container">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
